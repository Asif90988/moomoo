# Neural Core Alpha-7 Production Environment Configuration
# This file contains production-ready environment variables

# =============================================================================
# PRODUCTION APPLICATION SETTINGS
# =============================================================================

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://neuralcore.ai
NEXT_PUBLIC_API_URL=https://neuralcore.ai/api
NEXT_PUBLIC_APP_NAME="Neural Core Alpha-7"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_COMPANY_NAME="Neural Core Technologies"

# =============================================================================
# SSL/HTTPS SECURITY CONFIGURATION  
# =============================================================================

FORCE_HTTPS=true
SECURE_COOKIES=true
SSL_CERT_PATH=/etc/ssl/certs/neuralcore.pem
SSL_KEY_PATH=/etc/ssl/private/neuralcore.key

# CORS Configuration
CORS_ORIGINS=https://neuralcore.ai,https://www.neuralcore.ai
ALLOWED_HOSTS=neuralcore.ai,www.neuralcore.ai

# =============================================================================
# AI ENGINE CONFIGURATION (PRODUCTION)
# =============================================================================

# Secure WebSocket connection to AI engine
NEXT_PUBLIC_AI_ENGINE_URL=wss://api.neuralcore.ai/ws
NEXT_PUBLIC_AI_ENGINE_API_URL=https://api.neuralcore.ai/v1
AI_ENGINE_SECRET_KEY=prod_neural_secret_256bit_key_here
AI_ENGINE_JWT_SECRET=prod_ai_jwt_secret_here

# Qdrant Vector Database (Production)
NEXT_PUBLIC_QDRANT_URL=https://qdrant.neuralcore.ai:6333
QDRANT_API_KEY=prod_qdrant_api_key_here
QDRANT_COLLECTION_NAME=neural_core_production

# AI Configuration (Production)
NEXT_PUBLIC_AI_CONFIDENCE_THRESHOLD=0.80
NEXT_PUBLIC_AI_UPDATE_INTERVAL=2000
NEXT_PUBLIC_AI_MAX_THOUGHTS_HISTORY=500

# =============================================================================
# DATABASE CONFIGURATION (PRODUCTION)
# =============================================================================

# PostgreSQL Production Database with SSL
DATABASE_URL="postgresql://neural_core_user:secure_prod_password@db.neuralcore.ai:5432/neural_core_production?schema=public&sslmode=require"
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=30
DATABASE_CONNECTION_TIMEOUT=30000

# Redis Cache (Production)
REDIS_URL=redis://cache.neuralcore.ai:6379
REDIS_PASSWORD=secure_redis_password_here
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY (PRODUCTION)
# =============================================================================

# NextAuth Production Configuration
NEXTAUTH_URL=https://neuralcore.ai
NEXTAUTH_SECRET=super_secure_nextauth_secret_production_256bit
NEXTAUTH_JWT_SECRET=super_secure_jwt_secret_production_256bit

# Encryption & Hashing
ENCRYPTION_KEY=production_encryption_key_256bit_here
PASSWORD_SALT_ROUNDS=12
JWT_EXPIRY=24h

# API Security
NEXT_PUBLIC_API_RATE_LIMIT=5000
NEXT_PUBLIC_API_RATE_WINDOW=3600000
API_TIMEOUT=15000
MAX_REQUEST_SIZE=10mb

# =============================================================================
# TRADING PLATFORM (PRODUCTION)
# =============================================================================

# Neural Core Protection (Production)
NEXT_PUBLIC_MAX_DEPOSIT=300
NEXT_PUBLIC_ENABLE_DEPOSIT_PROTECTION=true
NEXT_PUBLIC_TRADING_MODE=live

# Moomoo API (Production)
NEXT_PUBLIC_MOOMOO_BASE_URL=https://api.moomoo.com/v1
MOOMOO_API_KEY=prod_moomoo_api_key_here
MOOMOO_SECRET_KEY=prod_moomoo_secret_key_here
MOOMOO_ACCOUNT_ID=prod_account_id
MOOMOO_MARKET_TYPE=US

# Risk Management (Production)
NEXT_PUBLIC_DEFAULT_RISK_LEVEL=3
MAX_POSITION_SIZE_PERCENT=10
MAX_DAILY_LOSS_PERCENT=5
CIRCUIT_BREAKER_THRESHOLD=0.15

# =============================================================================
# REAL-TIME DATA (PRODUCTION)
# =============================================================================

# WebSocket Configuration (Production)
NEXT_PUBLIC_WS_URL=wss://ws.neuralcore.ai
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=10000
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=10
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# Market Data (Production)
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=500
NEXT_PUBLIC_CHART_UPDATE_INTERVAL=2000
MARKET_DATA_CACHE_TTL=300

# =============================================================================
# MONITORING & ANALYTICS (PRODUCTION)
# =============================================================================

# Error Monitoring (Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://your_production_sentry_dsn@sentry.io/project
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=neural-core-technologies
SENTRY_PROJECT=neural-core-alpha-7

# Analytics (Google Analytics or similar)
NEXT_PUBLIC_ANALYTICS_ID=GA-PRODUCTION-ID-HERE
ANALYTICS_SECRET=analytics_secret_key

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_LOG_LEVEL=error
LOG_RETENTION_DAYS=30

# Health Checks
HEALTH_CHECK_INTERVAL=60000
UPTIME_MONITOR_URL=https://monitor.neuralcore.ai

# =============================================================================
# PAYMENT PROCESSING (PRODUCTION)
# =============================================================================

# Stripe (Production)
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_CONNECT_CLIENT_ID=ca_your_stripe_connect_client_id

# PayPal (Production)  
PAYPAL_CLIENT_ID=your_paypal_production_client_id
PAYPAL_CLIENT_SECRET=your_paypal_production_client_secret
PAYPAL_MODE=live

# =============================================================================
# EMAIL & NOTIFICATIONS (PRODUCTION)
# =============================================================================

# SMTP Configuration (Production)
SMTP_HOST=smtp.neuralcore.ai
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@neuralcore.ai  
SMTP_PASS=secure_smtp_password_here
FROM_EMAIL=Neural Core Alpha-7 <noreply@neuralcore.ai>

# SendGrid (Alternative)
SENDGRID_API_KEY=your_sendgrid_production_api_key
SENDGRID_FROM_EMAIL=noreply@neuralcore.ai

# Push Notifications
PUSH_NOTIFICATION_SERVICE_KEY=your_push_service_key
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# CDN & STORAGE (PRODUCTION)
# =============================================================================

# AWS S3 (Production)
CDN_URL=https://cdn.neuralcore.ai
S3_BUCKET=neuralcore-production-assets
AWS_ACCESS_KEY_ID=your_aws_production_access_key
AWS_SECRET_ACCESS_KEY=your_aws_production_secret_key
AWS_REGION=us-east-1
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# File Upload Limits
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,csv

# =============================================================================
# NEURAL CORE FEATURES (PRODUCTION)
# =============================================================================

# Core Features (All enabled in production)
NEXT_PUBLIC_ENABLE_AI_BRAIN_DASHBOARD=true
NEXT_PUBLIC_ENABLE_NEURAL_NETWORK_VIEW=true
NEXT_PUBLIC_ENABLE_TIMES_SQUARE_TICKERS=true
NEXT_PUBLIC_ENABLE_PAPER_TRADING=true
NEXT_PUBLIC_ENABLE_LIVE_TRADING=true

# Advanced Features
NEXT_PUBLIC_ENABLE_SOCIAL_TRADING=true
NEXT_PUBLIC_ENABLE_PORTFOLIO_SHARING=true
NEXT_PUBLIC_ENABLE_AI_INSIGHTS_EXPORT=true
NEXT_PUBLIC_ENABLE_ADVANCED_CHARTS=true

# Experimental Features (Disabled by default)
NEXT_PUBLIC_ENABLE_VOICE_COMMANDS=false
NEXT_PUBLIC_ENABLE_VR_MODE=false
NEXT_PUBLIC_ENABLE_CRYPTO_TRADING=false

# =============================================================================
# NEURAL VISUALIZATION (PRODUCTION)
# =============================================================================

# Optimized for production performance
NEXT_PUBLIC_NEURAL_ANIMATION_SPEED=1.2
NEXT_PUBLIC_NEURAL_PARTICLE_COUNT=30
NEXT_PUBLIC_NEURAL_GRID_DENSITY=15
NEXT_PUBLIC_MAX_NEURAL_CONNECTIONS=100

# Ticker Configuration (Production)
NEXT_PUBLIC_TICKER_SPEED=20000
NEXT_PUBLIC_TICKER_UPDATE_INTERVAL=3000
NEXT_PUBLIC_MAX_TICKER_ITEMS=50

# =============================================================================
# COMPLIANCE & LEGAL (PRODUCTION)
# =============================================================================

# Regulatory Compliance
FINRA_COMPLIANCE_MODE=true
SEC_REPORTING_ENABLED=true
GDPR_COMPLIANCE_MODE=true
CCPA_COMPLIANCE_MODE=true

# Data Retention
USER_DATA_RETENTION_DAYS=2555  # 7 years
TRADING_DATA_RETENTION_DAYS=3650  # 10 years
LOG_DATA_RETENTION_DAYS=90

# =============================================================================
# DEPLOYMENT SPECIFIC (PRODUCTION)
# =============================================================================

# Container Configuration
DOCKER_IMAGE_TAG=production
CONTAINER_PORT=3000
CONTAINER_MEMORY_LIMIT=2G
CONTAINER_CPU_LIMIT=1000m

# Load Balancer
ENABLE_LOAD_BALANCER=true
MAX_CONCURRENT_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000

# Auto-scaling
MIN_INSTANCES=2
MAX_INSTANCES=10
CPU_SCALE_THRESHOLD=70
MEMORY_SCALE_THRESHOLD=80

# =============================================================================
# SUPPORT & CONTACT (PRODUCTION)
# =============================================================================

NEXT_PUBLIC_SUPPORT_EMAIL=support@neuralcore.ai
NEXT_PUBLIC_SUPPORT_PHONE=+1-800-NEURAL-7
NEXT_PUBLIC_SUPPORT_HOURS="24/7 AI-Powered Support"
NEXT_PUBLIC_DOCUMENTATION_URL=https://docs.neuralcore.ai

# Emergency Contacts
EMERGENCY_CONTACT_EMAIL=emergency@neuralcore.ai
INCIDENT_RESPONSE_WEBHOOK=https://hooks.neuralcore.ai/incidents

# =============================================================================
# BACKUP & DISASTER RECOVERY (PRODUCTION)
# =============================================================================

# Database Backups
DB_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_S3_BUCKET=neuralcore-db-backups

# Application Backups
APP_BACKUP_ENABLED=true
CONFIG_BACKUP_ENABLED=true
BACKUP_ENCRYPTION_KEY=backup_encryption_key_256bit

# Disaster Recovery
DR_REGION=us-west-2
RTO=4h  # Recovery Time Objective
RPO=1h  # Recovery Point Objective