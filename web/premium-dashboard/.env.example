# Neural Core Alpha-7 Environment Configuration

# =============================================================================
# AI ENGINE CONFIGURATION
# =============================================================================

# AI Engine WebSocket URL (Rust backend)
NEXT_PUBLIC_AI_ENGINE_URL=ws://localhost:3001

# Qdrant Vector Database URL (for AI learning and memory)
NEXT_PUBLIC_QDRANT_URL=http://localhost:6333

# AI Configuration
NEXT_PUBLIC_AI_CONFIDENCE_THRESHOLD=0.75
NEXT_PUBLIC_AI_UPDATE_INTERVAL=2500

# =============================================================================
# TRADING PLATFORM CONFIGURATION  
# =============================================================================

# Maximum deposit protection ($300 limit for educational focus)
NEXT_PUBLIC_MAX_DEPOSIT=300

# Trading mode: 'paper' for simulation, 'live' for real trading
NEXT_PUBLIC_TRADING_MODE=paper

# Default risk tolerance (1-10 scale)
NEXT_PUBLIC_DEFAULT_RISK_LEVEL=5

# =============================================================================
# MOOMOO API INTEGRATION
# =============================================================================

# Moomoo OpenD API Configuration (PUBLIC URL ONLY)
NEXT_PUBLIC_MOOMOO_BASE_URL=http://127.0.0.1:11111
# ðŸ”’ SECRETS MOVED TO SERVER-SIDE - DO NOT USE NEXT_PUBLIC_ FOR SECRETS!
# MOOMOO_API_KEY=your_actual_api_key_here (in .env.local)
# MOOMOO_SECRET_KEY=your_actual_secret_key_here (in .env.local)

# Account configuration
MOOMOO_ACCOUNT_ID=your_account_id
MOOMOO_MARKET_TYPE=US  # US, HK, CN

# =============================================================================
# REAL-TIME DATA CONFIGURATION
# =============================================================================

# WebSocket configuration for live data
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_WS_RECONNECT_ATTEMPTS=5
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=3000

# Market data refresh rates (milliseconds)
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=1000
NEXT_PUBLIC_CHART_UPDATE_INTERVAL=5000

# =============================================================================
# NEURAL VISUALIZATION SETTINGS
# =============================================================================

# Neural network visualization settings
NEXT_PUBLIC_NEURAL_ANIMATION_SPEED=1.0
NEXT_PUBLIC_NEURAL_PARTICLE_COUNT=20
NEXT_PUBLIC_NEURAL_GRID_DENSITY=12

# Ticker system configuration
NEXT_PUBLIC_TICKER_SPEED=25000
NEXT_PUBLIC_TICKER_UPDATE_INTERVAL=3500

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# NextAuth configuration (if implementing authentication)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# API rate limiting
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_WINDOW=60000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Analytics and monitoring (optional)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_LOG_LEVEL=info

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development flags
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_DEVTOOLS=true

# Mock data for development
NEXT_PUBLIC_USE_MOCK_DATA=true
NEXT_PUBLIC_MOCK_DELAY=500

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Vercel deployment (if using Vercel)
VERCEL_URL=your_vercel_url
VERCEL_ENV=development

# Custom domain
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# NEURAL CORE BRANDING
# =============================================================================

# Application branding
NEXT_PUBLIC_APP_NAME="Neural Core Alpha-7"
NEXT_PUBLIC_APP_DESCRIPTION="Revolutionary AI-Transparent Trading Platform"
NEXT_PUBLIC_COMPANY_NAME="Neural Core Technologies"

# Contact information
NEXT_PUBLIC_SUPPORT_EMAIL=support@neuralcore.ai
NEXT_PUBLIC_SUPPORT_PHONE=+1-555-123-4567

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable major features
NEXT_PUBLIC_ENABLE_AI_BRAIN_DASHBOARD=true
NEXT_PUBLIC_ENABLE_TRAIN_VISUALIZATION=true
NEXT_PUBLIC_ENABLE_NEURAL_NETWORK_VIEW=true
NEXT_PUBLIC_ENABLE_TIMES_SQUARE_TICKERS=true

# Experimental features
NEXT_PUBLIC_ENABLE_VOICE_COMMANDS=false
NEXT_PUBLIC_ENABLE_VR_MODE=false
NEXT_PUBLIC_ENABLE_SOCIAL_TRADING=false